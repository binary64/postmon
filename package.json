{
  "name": "postmon",
  "version": "0.0.1",
  "description": "An npm script that runs another script only if the contents of a directory have changed",
  "main": "dist/main.cjs",
  "repository": "git@github.com:binary64/postmon.git",
  "author": "binary64 <1680627+binary64@users.noreply.github.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "postmon": "dist/main.js"
  },
  "scripts": {
    "build": "node esbuild.cjs",
    "dev": "nodemon -w src -e ts -x \"pnpm build && node dist/main.js\""
  },
  "devDependencies": {
    "@types/node": "16.4.9",
    "esbuild": "0.12.17",
    "fast-glob": "3.2.7",
    "nodemon": "2.0.12",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "commander": "8.1.0",
    "hash-obj": "4.0.0",
    "hasha": "5.2.2",
    "p-map": "5.1.0",
    "promisify-child-process": "4.1.1",
    "puka": "1.0.1"
  }
}