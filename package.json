{
  "name": "postmon",
  "version": "0.0.1",
  "description": "An npm script that runs another script only if the contents of a directory have changed",
  "module": "dist/main.mjs",
  "repository": "git@github.com:binary64/postmon.git",
  "author": "binary64 <1680627+binary64@users.noreply.github.com>",
  "license": "MIT",
  "type": "module",
  "bin": "dist/main.mjs",
  "scripts": {
    "build": "node --experimental-json-modules esbuild.cjs",
    "dev": "nodemon -w src -e ts -x \"pnpm build && node --experimental-json-modules dist/main.mjs\""
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.12",
    "@types/node": "16.4.9",
    "esbuild": "0.12.17",
    "nodemon": "2.0.12",
    "ts-node-dev": "1.1.8",
    "hash-obj": "4.0.0",
    "p-map": "5.1.0",
    "puka": "1.0.1",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "hasha": "5.2.2",
    "fs-extra": "10.0.0",
    "commander": "8.1.0",
    "promisify-child-process": "4.1.1",
    "fast-glob": "3.2.7"
  }
}