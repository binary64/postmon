{
	"name": "postmon",
	"version": "0.0.6",
	"description": "An npm script that runs another script only if the contents of a directory have changed",
	"repository": "git@github.com:binary64/postmon.git",
	"author": "binary64 <1680627+binary64@users.noreply.github.com>",
	"license": "MIT",
	"type": "module",
	"bin": "dist/cli.mjs",
	"bugs": "https://github.com/binary64/postmon/issues",
	"homepage": "https://github.com/binary64/postmon",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"clean": "rimraf dist",
		"prepublish": "pnpm build && packito",
		"build": "node esbuild.cjs",
		"dev": "nodemon -w src -e ts -x \"pnpm build && node dist/main.mjs\""
	},
	"dependencies": {
		"commander": "8.1.0",
		"fast-glob": "3.2.7",
		"fs-extra": "10.0.0",
		"hash-obj": "4.0.0",
		"hasha": "5.2.2",
		"p-map": "5.1.0",
		"packito": "^0.5.0",
		"puka": "1.0.1"
	}
}